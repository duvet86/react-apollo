{
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "graphql"
    ],
    "rules": {
        "no-var": "error",
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "no-console": "off"
    }
}