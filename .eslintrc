{
    "extends": "react-app",
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "graphql"
    ],
    "rules": {
        "no-var": "error",
        "semi": [
            "error",
            "always"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "no-console": "off"
    }
}